{
    "name": "j2nlab/laravel-simple-version",
    "description": "Manage easily your Laravel app version",
    "type": "library",
    "keywords": [ "laravel", "version", "versioning" ],
    "homepage": "https://github.com/J2Nlab/laravel-simple-version",
    "license": "MIT",
    "authors": [
        {
            "name": "J2N",
            "email": "dev@j2nlab.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/console": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "illuminate/view": "^6.0|^7.0|^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "laravel/framework": "^6.0|^7.0",
        "phpunit/phpunit": "^8.0|^9.0",
        "orchestra/testbench": "^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "J2Nlab\\SimpleVersion\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts" : {
        "test" : "vendor/bin/phpunit tests/"
    },
    "extra": {
        "laravel": {
            "providers": [
                "J2Nlab\\SimpleVersion\\ServiceProvider"
            ]
        }
    }
}
